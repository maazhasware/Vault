<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="csharpcorner.Views.WelcomePage"
             NavigationPage.HasNavigationBar="false">
    <ContentPage.Content>
        <StackLayout Margin="20,35,20,20">
            <StackLayout>

                <StackLayout HorizontalOptions="Center" VerticalOptions="Start">
                    <Label Margin="0,0,0,10" Text="Dashboard" FontAttributes="Bold" FontSize="Large" TextColor="Gray" HorizontalTextAlignment="Center" ></Label>
                    
                    <StackLayout  HorizontalOptions="CenterAndExpand" Orientation="Horizontal">
                        <Button x:Name="btnUploadImage" WidthRequest="200" Text="Upload Image" BackgroundColor="#1e1e1f" TextColor="White" Command="{Binding UploadImageCommand}"/>
                    </StackLayout>
                    <StackLayout HorizontalOptions="CenterAndExpand" Orientation="Horizontal">
                        <Button x:Name="btnUploadVideo" WidthRequest="200" Text="Upload Video" BackgroundColor="#1e1e1f" TextColor="White" Command="{Binding UploadVideoCommand}"/>
                    </StackLayout>
                    <StackLayout  HorizontalOptions="CenterAndExpand" Orientation="Horizontal">
                        <Button x:Name="btnViewAllImages" WidthRequest="200" Text="View All Images" BackgroundColor="#1e1e1f" TextColor="White" Command="{Binding ViewAllImagesCommand}"/>
                    </StackLayout>
                    <StackLayout  HorizontalOptions="CenterAndExpand" Orientation="Horizontal">
                        <Button x:Name="btnViewAllVideos" WidthRequest="200" Text="View All Videos" BackgroundColor="#1e1e1f" TextColor="White" Command="{Binding ViewAllVideosCommand}"/>
                    </StackLayout>
                    <StackLayout  HorizontalOptions="CenterAndExpand" Orientation="Horizontal">
                        <Button x:Name="btnSettings" WidthRequest="200" Text="Settings" BackgroundColor="#1e1e1f" TextColor="White" Command="{Binding SettingsCommand}"/>
                    </StackLayout>
                    <StackLayout HorizontalOptions="CenterAndExpand" Orientation="Horizontal">
                        <Button x:Name="Logout" WidthRequest="200"  Text="Logout" BackgroundColor="#1e1e1f" TextColor="White" Command="{Binding LogoutCommand}" />
                    </StackLayout>
                    
                </StackLayout>

            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>