<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="csharpcorner.Views.ForgotPasswordPage"
             BackgroundImage="NewBackground.png"
             Title="Forgot Password">
    <ContentPage.Content>
        <StackLayout Margin="20,20,20,20">
            <StackLayout Padding="10, 10, 10, 10" Orientation="Vertical" BackgroundColor="DarkGray" Spacing="10" >
                <Label Text="Please enter the email address used for your account. We will send an email with a temporary password to this email."/>
                <Entry x:Name="EmailEntry" Placeholder="Email" PlaceholderColor="White" Text="{Binding Email}" TextColor="White" HeightRequest = "40" Keyboard="Email"/>
                <Entry x:Name="EmailConfirmationEntry" Placeholder="Email Confirmation" PlaceholderColor="White" Text="{Binding EmailConfirmation}" TextColor="White" HeightRequest = "40" Keyboard="Email"/>
            </StackLayout>
            <Button x:Name="btnSubmit" Text="Submit" Command="{Binding SubmitCommand}" BackgroundColor="DarkGray" TextColor="White" HorizontalOptions="FillAndExpand"/>
            <Button x:Name="btnCancel" Text="Cancel" Command="{Binding CancelCommand}" BackgroundColor="DarkGray" TextColor="White" HorizontalOptions="FillAndExpand"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>